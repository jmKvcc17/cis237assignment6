@model IEnumerable<cis237Assignment6.Models.Beverage>

@{
    ViewBag.Title = "Beverages";
}

<h2>Beverages in Database</h2>

<div class="form-group">
    <fieldset>
        <legend>Search Filter</legend>
        @{ 
            using (Html.BeginForm("Filter", "Beverages", FormMethod.Post, new { @class = "form-inline" }))
            {
                @Html.AntiForgeryToken()
                <div style="padding-left:50px"> @*****************************@
                    <label for="name">Name</label>
                    @Html.TextBox("name", (string)ViewBag.filterMake)
                    <label for="pack">Pack</label>
                    @Html.TextBox("pack", (string)ViewBag.filterMake)
                    <input name="min" for="min" type="number" value="@ViewBag.filterMin">Min @*************************@
                    @*@Html.TextBox("min", (string)ViewBag.filterMake)*@
                    <input name="max" type="number" for="max" value="@ViewBag.filterMax">Max @**************************@
                    @*@Html.TextBox("max", (string)ViewBag.filterMake)*@
                </div>
                <br />
                <input type="submit" value="Filter" class="btn btn-info pull-right" style="background-color: coral" />
            }
        }
    </fieldset>
</div>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.pack)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.active)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.pack)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.active)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.id }) |
